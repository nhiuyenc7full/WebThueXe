
@{
    ViewData["Title"] = "Index";
}

<h1>Index dangmy</h1>
<div>
    <a href="javascripts:void(0);" class="btn btn-outline-success" onclick="banner.openAddEditModal()">Create New</a>
</div>
<div class="row" style="margin-top:10px">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>#ID</th>
                <th>Tên Banner</th>
                <th>Link</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="banner">
        </tbody>
    </table>
</div>

<div class="modal" id="addEditModel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="frmAddEditBanner">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create Banner</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input type="hidden" id="BannerId" name="BannerId" value="0" />
                    <div class="row form-group">
                        <div class="col-2 col-md-2">
                            <label class="float-right">Tên Banner</label>
                        </div>
                        <div class="col-10 col-md-10">
                            <input type="text" class="form-control" id="TenBanner" name="TenBanner"
                                   data-rule-required="true"
                                   data-msg-required="Đây là trường bắt buộc" />
                        </div>
                    </div>

                    
                    <div class="row form-group">
                        <div class="col-2 col-md-2">
                            <label class="float-right">Link Banner</label>
                        </div>
                        <div class="col-10 col-md-10">
                            <input type="datetime" class="form-control" id="LinkBanner" name="LinkBanner" />
                        </div>
                    </div>
                    
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="javascripts:void(0);" class="btn btn-primary" onclick="banner.save()">Save</a>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section css{
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/Banner/Banner.js"></script>
}